@* @model CNPM_ktxUtc2Store.Dto.productVaritionCreateView *@
@model CNPM_ktxUtc2Store.Areas.Admin.dto.productvariationDto
@{
    ViewData["Title"] = "AddVariation";
    Layout = "~/Areas/Saler/Views/Shared/_Layout.cshtml";
}



<div class="admin-variation-head">
    <div class="head-item">
        <h5><i class="far fa-clipboard"></i> Thời trang nam</h5>
    </div>

    <div class="head-item search-box">
    </div>
    <div class="head-item add-product">
        <div class="add-product-1">
            <a class="btn btn-primary " asp-action="Create"><i class="fas fa-plus" style="font-size: 1em; padding-right: 5px;"></i>Danh sách sản phẩm</a>
        </div>

    </div>
</div>

<div class="all-variation">
    <div>
        <div>
            <div class="admin-orders-process order-head-color">
                <div class="admin-variation-select">
                </div>
                <div class="admin-variation-value">
                    Giá trị
                </div>
                <div class="admin-variation-control">
                    Thao tác
                </div>
            </div>

            @{
                bool isAdded = false;
            }
            <div class="admin-orders-process">
                <div class="variation-content-table">
                    @foreach (var outerItem in Model.Variations)
                    {
                        isAdded = false;

                        @foreach (var innerItem in Model.productVariations)
                        {
                            if (innerItem.variationId == outerItem.Id)
                            {
                                isAdded = true; // Nếu tìm thấy phần tử tương đương, đặt isAdded thành true và thoát vòng lặp

                                break;
                            }
                        }


                        @if (isAdded)
                        {
                            <div class="admin-variation-select">
                                <label>
                                    tích xanh
                                </label>
                            </div>
                            <div class="admin-variation-value">
                                @outerItem.value
                            </div>
                            <div class="admin-variation-control">
                                Đã Thêm
                            </div>

                        }
                        else
                        {
                            <div class="admin-variation-control">
                                <label>
                                    <input asp-for="Id" type="radio"
                                           value="@outerItem.Id" />
                                </label>
                            </div>
                            <div class="admin-variation-value">
                                @outerItem.value
                            </div>
                            <div class="admin-variation-control">
                                Thêm
                            </div>
                        }

                    }
                </div>

            </div>
        </div>
    </div>
</div>







