@model IEnumerable<CNPM_ktxUtc2Store.Models.AdressStorage>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Saler/Views/Shared/_Layout.cshtml";

}
<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Địa chỉ
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameAdress)
            </td>
          
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
              
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create"><button class="wrap-btn m-color">Thêm địa chỉ</button></a>
</p>
